#include <iostream>
#include <cmath>

using namespace std;

int main() {
	setlocale(LC_ALL, "RUS");
	int n;
	cout << "Введите направление: ";
	cin >> n;
	switch (n) {
	case 1:
		cout << "Горизонтально влево";
		break;
	case 2:
		cout << "Вертикально вверх";
		break;
	case 3:
		cout << "Горизонтально вправо";
		break;
	case 4:
		cout << "Вертикально вниз";
		break;
	}
	return 0;
}
